# --- Color ls & exa --- #
if which exa >/dev/null; then
	## ls --all-files
	alias l="exa -a --color=always --group-directories-first --git"
	## ls with columns
	alias ls="exa --color=always --group-directories-first --git"
	## list directories only
	alias lsd="exa -ad --color=always --group-directories-first --git */"
	## ls --long --all-files with columns
	alias la="exa -la --color=always --group-directories-first --git"
	## list directories only
	alias lad="exa -lad --color=always --group-directories-first --git */"
	## tree listing
	alias lt='exa -aT -L3 --color=always --group-directories-first -git -git-ignore' # tree listing
	## ls --long --all-files with columns
	# alias lgitignore="exa -1a --color=always --group-directories-first --git"
	## ls --all-files with columns
	# alias la="exa -1a --color=always --group-directories-first --git --git-ignore"

else
	alias l="ls -1"
	alias ls="ls --color=always"
	alias ll="ls -l"
	alias la="ls -lA"
fi

# --- cd --- #
cdls() {
	local dir="$1"
	local dir="${dir:=$HOME}"
	if [[ -d "$dir" ]]; then
		\cd "$dir" >/dev/null
		if which exa >/dev/null; then
			exa -a --color=always --group-directories-first --git --git-ignore
		else
			ls -a --color=always
		fi
	else
		echo "$dir: Directory not found"
	fi
}
alias cd='cdls'
alias ..='cd ..'
alias ...='cd ../../'
